# ===========================================
# A Vision For You - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values.

# --- Required ---

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=  # Generate with: openssl rand -base64 32

# Database - Neon PostgreSQL
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# --- Authentication ---

# Google OAuth (for Google sign-in)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
# Redirect URI: {NEXTAUTH_URL}/api/auth/callback/google

# --- Payments ---

# Square Payment Integration (for donations & DUI class payments)
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_ENVIRONMENT=sandbox  # Change to 'production' for live payments
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature-key

# --- Email ---

# Resend (transactional emails: confirmations, reminders, receipts)
RESEND_API_KEY=re_your_resend_api_key

# Admin email for notifications (admission inquiries, contact forms)
ADMIN_EMAIL=admin@avisionforyou.org

# App URL used in email templates
NEXT_PUBLIC_APP_URL=https://avisionforyou.org

# --- Scheduled Tasks ---

# Secret for cron endpoints (meeting reminders)
CRON_SECRET=your-secure-random-cron-secret

# --- Analytics (Optional) ---

NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# --- Error Monitoring ---

# Sentry (source maps, error tracking, performance)
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=sntrys_your-auth-token

# --- Development Only ---

# Auth bypass - injects fake admin session (NEVER enable in production)
# NEXT_PUBLIC_BYPASS_AUTH=true
